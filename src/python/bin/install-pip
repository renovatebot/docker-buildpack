#!/bin/bash

set -e

. /usr/local/build/util.sh

TOOLNAME=${1}
shift;

if [[ ! "$TOOLNAME" ]]; then
  echo "No gem defined - skipping: ${TOOLNAME}"
  exit 1;
fi

ENVNAME=${TOOLNAME^^}_VERSION

if [[ "${1}" ]]; then
  export $ENVNAME=$1
  shift;
fi


check_version ${ENVNAME}
check_command pip

echo "Installing pip ${TOOLNAME} v${!ENVNAME}"
pip install --upgrade ${TOOLNAME}==${!ENVNAME}

# clean cache https://pip.pypa.io/en/stable/reference/pip_cache/#pip-cache
pip cache purge
