{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>renovatebot/presets-internal:docker-images"],
  "ignorePaths": [],
  "packageRules": [{
    "description": "Don't hold back any PRs for approval",
    "packagePatterns": ["*"],
    "dependencyDashboardApproval": false
  }, {
    "description": "Don't automerge test minor/major because we might want to test old versions too",
    "paths": ["test/"],
    "automerge": false,
    "separateMinorPatch": true
  }]
}
