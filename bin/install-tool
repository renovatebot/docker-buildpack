#!/bin/bash

. /usr/local/build/util.sh

TOOLNAME=${1}
TOOL="/usr/local/build/${1}.sh"
shift;

if [[ ! -f "$TOOL" ]]; then
  echo "No tool defined - skipping: ${TOOLNAME}"
  exit 1;
fi

ENVNAME=${TOOLNAME^^}_VERSION

if [[ "${1}" ]]; then
  export $ENVNAME=$1
  shift;
fi

check_version ${ENVNAME}

echo "Installing tool ${TOOLNAME} v${!ENVNAME}"
. $TOOL $@

# cleanup
rm -rf /var/lib/apt/lists/*
